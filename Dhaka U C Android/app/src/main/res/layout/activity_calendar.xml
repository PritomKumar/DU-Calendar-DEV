<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar.CalendarClass">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:mcv_headerTextAppearance="@color/design_default_color_primary"
            app:mcv_selectionColor="@color/colorPrimary"
            app:mcv_selectionMode="single"
            app:mcv_showOtherDates="all"
            app:mcv_showWeekDays="true"
            app:mcv_weekDayLabels="@color/colorPrimary"
            app:mcv_weekDayTextAppearance="@color/deeppurple" />
    </ScrollView>

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/listEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="end"
        android:layout_gravity="bottom|end"
        app:floating_left_icon="@drawable/calendar"
        app:floating_right_icon="@drawable/calendar"
        app:floating_title="See  Events"
        app:floating_title_color="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:floating_background_color="#ffd600"
        />



</androidx.constraintlayout.widget.ConstraintLayout>